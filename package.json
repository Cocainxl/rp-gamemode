{
	"name": "shr0x-framework",
	"version": "0.5.0",
	"description": "A RageMP roleplay framework",
	"main": "index.js",
	"homepage": ".",
	"scripts": {
		"watch:server": "npx webpack --watch --profile --config ./source/backend/webpack.server.js",
		"build:server": "npx webpack --profile --config ./source/backend/webpack.server.js",
		"watch:client": "npx webpack --watch --profile --config ./source/backend/webpack.client.js",
		"build:client": "npx webpack --profile --config ./source/backend/webpack.client.js",
		"watch:cef": "cd ./source/frontend && npm run start",
		"build:cef": "cd ./source/frontend && npm run start",
		"format-client": "prettier --config .prettierrc \"./source/backend/client/**/*.ts\" --write",
		"format-server": "prettier --config .prettierrc \"./source/backend/server/**/*.ts\" --write"
	},
	"keywords": [
		"RAGEMP",
		"GTA5",
		"GRA5RP",
		"roleplay",
		"rpserver",
		"rpscript",
		"rpgamemode",
		"gamemode"
	],
	"author": "rShr0x",
	"license": "MIT",
	"dependencies": {
		"bufferutil": "^4.0.7",
		"colorette": "^2.0.19",
		"discord-webhook-node": "^1.1.8",
		"dotenv": "^16.0.3",
		"keycode": "^2.2.1",
		"lodash": "^4.17.21",
		"node-cron": "^3.0.2",
		"pg": "^8.11.1",
		"reflect-metadata": "^0.1.14",
		"ts-loader": "^9.4.2",
		"typeorm": "^0.3.14",
		"uuid": "^9.0.0",
		"webpack-cli": "^5.0.1",
		"webpack-merge": "^5.8.0",
		"webpack-obfuscator": "^3.5.1",
		"yarn": "^1.22.19"
	},
	"devDependencies": {
		"@ragempcommunity/types-client": "github:ragempcommunity/ragemp-types#types-client",
		"@ragempcommunity/types-server": "^2.1.6",
		"@types/lodash.clonedeep": "^4.5.7",
		"@types/node": "^18.15.11",
		"@types/uuid": "^9.0.1",
		"tsconfig-paths-webpack-plugin": "^4.0.1",
		"typescript": "^5.0.4",
		"webpack": "^5.78.0",
		"webpack-node-externals": "^3.0.0"
	}
}
